@page
@model KoCNihul.Pages.Owners.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>כל המפעילים</h1>

<p>
    <a asp-page="Create">יצירת מפעיל חדש</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Owner[0].OwnerType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner[0].Desc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner[0].Tel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner[0].Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner[0].Mail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Owner) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerType.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Desc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.OwnerId">עריכה</a> |
                <a asp-page="./Details" asp-route-id="@item.OwnerId">פרטים</a> |
                <a asp-page="./Delete" asp-route-id="@item.OwnerId">מחיקה</a>
            </td>
        </tr>
}
    </tbody>
</table>
