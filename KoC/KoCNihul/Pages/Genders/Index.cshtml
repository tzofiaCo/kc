@page
@model KoCNihul.Pages.Genders.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>כל המגדרים</h1>

<p>
    <a asp-page="Create">יצירת מגדר חדש</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Gender[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender[0].Desc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender[0].Context)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender[0].Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Gender) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Desc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Context)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.GenderId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.GenderId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.GenderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
